        <Button x:Name="Formulas" Text="Vzorce" BorderWidth="0" HorizontalOptions="Start" FontSize="20" BackgroundColor="WhiteSmoke" Margin="15,5,0,6"></Button>
        <Button x:Name="Convertor" Text="Převodník" BorderWidth="0" HorizontalOptions="Start" FontSize="20" BackgroundColor="WhiteSmoke" Margin="15,5,0,6"></Button>
        <Button x:Name="History" Text="Historie" BorderWidth="0" HorizontalOptions="Start" FontSize="20" BackgroundColor="WhiteSmoke" Margin="15,5,0,6"></Button>
